<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_general_background"

    tools:context=".activity.EditBidangActivity">

    <ImageView
        android:id="@+id/logoImage7"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087"
        app:srcCompat="@mipmap/logo_ime_background" />

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back"
        app:tint="#FFC107" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#1b1b1b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImage7">

        <EditText
            android:id="@+id/namaBidangFieldEditBidang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/sfprodisplay"
            android:foregroundTint="#FFFFFF"
            android:hint="Nama Bidang"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#bfbfbf"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordBidangFieldEditBidang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/sfprodisplay"
            android:foregroundTint="#FFFFFF"
            android:hint="Password Bidang"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#bfbfbf"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namaBidangFieldEditBidang" />

        <EditText
            android:id="@+id/namaKetuaBidangFieldEditBidang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/sfprodisplay"
            android:foregroundTint="#FFFFFF"
            android:hint="Nama Ketua Bidang"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#bfbfbf"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordBidangFieldEditBidang" />

        <EditText
            android:id="@+id/namaPengurusBidangFieldEditBidang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/sfprodisplay"
            android:foregroundTint="#FFFFFF"
            android:hint="Nama Pengurus Bidang"
            android:inputType="textMultiLine"
            android:textColor="#FFFFFF"
            android:textColorHint="#bfbfbf"
            android:textSize="22dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namaKetuaBidangFieldEditBidang" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/editButtonEditBidang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#1B1B1B"
        android:fontFamily="@font/sfprodisplay"
        android:text="Edit"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />
</androidx.constraintlayout.widget.ConstraintLayout>