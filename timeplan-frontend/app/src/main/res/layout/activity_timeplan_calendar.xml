<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeplanCalendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_general_background"
    tools:context=".activity.TimeplanCalendarActivity">

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back"
        app:tint="#FFC107" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087"
        app:srcCompat="@mipmap/logo_ime_background" />

    <ImageView
        android:id="@+id/logoBidangImageTimeplanCalendar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_person_24" />

    <Button
        android:id="@+id/bulanButtonTimeplanCalendar"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/sfprodisplay"
        android:text="Januari"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FFC107"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/nextBulanButtonTimeplanCalendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/sfprodisplay"
        android:text="}"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FFC107"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/backBulanButtonTimeplanCalendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="#1b1b1b"
        android:fontFamily="@font/sfprodisplay"
        android:text="{"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:cornerRadius="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FFC107"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/showOwnedImageTimeplanCalendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_assistant_photo_24"
        app:tint="#997302" />

    <ImageView
        android:id="@+id/showActivitiesByColorImageTimeplanCalendar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_bookmark_24"
        app:tint="#997302" />

</androidx.constraintlayout.widget.ConstraintLayout>